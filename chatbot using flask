        "# chat initialization\n",
        "model = load_model(\"chatbot_model.h5\")\n",
        "intents = json.loads(open(\"intents.json\").read())\n",
        "words = pickle.load(open(\"words.pkl\", \"rb\"))\n",
        "classes = pickle.load(open(\"classes.pkl\", \"rb\"))"
